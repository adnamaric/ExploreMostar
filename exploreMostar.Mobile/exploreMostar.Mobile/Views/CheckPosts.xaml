<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:viewmodels="clr-namespace:exploreMostar.Mobile.ViewModels"
             x:Class="exploreMostar.Mobile.Views.CheckPosts">
    <ContentPage.BindingContext>
        <viewmodels:CheckNewPostsModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout BackgroundColor="#252526">
            <StackLayout x:Name="NavigationBar" Margin="10,10,12,10" Orientation="Horizontal">
                <ImageButton x:Name="goBack" Clicked="goBack_Clicked" HorizontalOptions="StartAndExpand"></ImageButton>
                
            </StackLayout>
            <ListView x:Name="MyRecenzijeView"
            ItemsSource="{Binding objave}"
            BackgroundColor="Transparent"
            CachingStrategy="RecycleElement" SeparatorVisibility="Default" SelectionMode="Single" SeparatorColor="DarkRed">
                <!--Built in Cells-->


                <!--Custom View Cells-->

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell >
                            <StackLayout>
                                <Label  HorizontalOptions="Start"  FontSize="Medium"  TextColor="White" 
                   Style="{DynamicResource ListItemDetailTextStyle}">
                                    <Label.FormattedText >
                                        <FormattedString >
                                            <Span FontAttributes="Bold"  Text="{Binding Rbr}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label  HorizontalOptions="Center"  FontSize="Medium"  TextColor="White" 
                   Style="{DynamicResource ListItemDetailTextStyle}">
                                    <Label.FormattedText >
                                        <FormattedString >
                                            <Span FontAttributes="Bold"  Text="{Binding Datum}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label VerticalTextAlignment="Start" HorizontalOptions="Center" TextColor="White" 
                   Style="{DynamicResource ListItemTextStyle}">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="Title: " />
                                            <Span Text="{Binding Naziv}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label VerticalTextAlignment="End" HorizontalOptions="Center" TextColor="White" 
                   Style="{DynamicResource ListItemTextStyle}">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="Author: " />
                                            <Span Text="{Binding Autor}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>

                                <Label Padding="0,5,0,0"  VerticalTextAlignment="Center" HorizontalOptions="Center" TextColor="White"   
                   Style="{DynamicResource ListItemDetailTextStyle}">
                                    <Label.FormattedText>
                                        <FormattedString>
                                       
                                            <Span Text="{Binding Sadrzaj}"/>
                                        </FormattedString>
                                    </Label.FormattedText>

                                </Label>
                                <Label Padding="0,10,0,0"></Label>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>


                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>